@model SISTEMANOMINA.EMPLEADO

@{
    ViewBag.Title = "Edicion";
}

<h2>Edicion</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Empleado</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_EMPLEADO)

        <div class="form-group">
            <div class="col-md-1">
                @Html.Label("Cedula Empleado")
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CEDULA_EMPLEADO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CEDULA_EMPLEADO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-1">
                    @Html.Label("Nombre Completo")
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NOMBRE_EMPLEADO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NOMBRE_EMPLEADO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-1">
                    @Html.Label("Departamento")
                </div>
                <div class="col-md-10">
                    @Html.DropDownList("ID_DEPARTAMENTO", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_DEPARTAMENTO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-1">
                    @Html.Label("Puesto")
                </div>
                <div class="col-md-10">
                    @Html.DropDownList("ID_PUESTO", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_PUESTO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-1">
                    @Html.Label("Salario Base")
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SALARIO_MENSUAL_EMPLEADO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SALARIO_MENSUAL_EMPLEADO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-1">
                    @Html.Label("Es Responsable?")
                </div>
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.RESPONSABLE_AREA)
                        @Html.ValidationMessageFor(model => model.RESPONSABLE_AREA, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-warning" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Volver Atras", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
