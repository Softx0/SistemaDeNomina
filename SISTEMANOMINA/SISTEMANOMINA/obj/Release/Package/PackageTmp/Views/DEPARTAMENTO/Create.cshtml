@model SISTEMANOMINA.DEPARTAMENTO

@{
    ViewBag.Title = "Crear";
}

<h2>Departamento</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Departamento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-1">
                @Html.Label("Departamento")
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NOMBRE_DEPARTAMENTO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NOMBRE_DEPARTAMENTO, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-1">
                @Html.Label("Ubicacion Fisica")
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UBICACION_FISICA_DEPARTAMENTO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UBICACION_FISICA_DEPARTAMENTO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Volver Atras", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
